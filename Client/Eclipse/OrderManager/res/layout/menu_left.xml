<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_left_ln_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_list_writing_left_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/menu_left_tv_all_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:textSize="@dimen/text_size_26sp"
        android:text="@string/menu_left_title_all_function "
        android:gravity="center_horizontal" />

    <ListView
        android:id="@+id/menu_left_lv_all_funtion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10">
    </ListView>

</LinearLayout>
