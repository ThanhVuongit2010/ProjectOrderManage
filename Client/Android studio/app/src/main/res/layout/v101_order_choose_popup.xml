<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/h40"
            android:background="@drawable/styles_box"
            android:orientation="vertical">

            <TextView
                android:id="@+id/v101_order_choose_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/h10"
                android:text="Bàn 290"
                android:textSize="@dimen/text_size_20sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/h2"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/v101_order_choose_ln_order"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/h10"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/v101_order_choose_img_order"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/menu_icon_order" />

                    <TextView
                        android:id="@+id/v101_order_choose_txt_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/h10"
                        android:layout_weight="0"
                        android:text="Chọn món"
                        android:textSize="@dimen/text_size_18sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/v101_order_choose_ln_order_change"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/h10"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/v101_order_choose_img_order_change"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/v101_icon_change_order" />

                    <TextView
                        android:id="@+id/v101_order_choose_txt_order_change"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/h10"
                        android:layout_weight="0"
                        android:text="Thay đổi món"
                        android:textSize="@dimen/text_size_18sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/v101_order_choose_ln_view_info"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/h10"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/v101_order_choose_img_view_info"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/v101_icon_view" />

                    <TextView
                        android:id="@+id/v101_order_choose_txt_view_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/h10"
                        android:layout_weight="0"
                        android:text="Xem thông tin"
                        android:textSize="@dimen/text_size_18sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/v101_order_choose_ln_order_payment"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/h10"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/v101_order_choose_img_order_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/v101_icon_charges" />

                    <TextView
                        android:id="@+id/v101_order_choose_txt_order_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/h10"
                        android:layout_weight="0"
                        android:text="Tính tiền"
                        android:textSize="@dimen/text_size_18sp" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
<!--button close dialog-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/h30"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/v101_order_choose_close"
            android:id="@+id/v101_order_choose_img_close" />
    </RelativeLayout>



</LinearLayout>
