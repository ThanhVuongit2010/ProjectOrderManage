<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/h10">

    <TextView
        android:id="@+id/v101_item_view_order_product_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="left"
        android:text="01. Caffe"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/v101_item_view_order_product_number"
        android:layout_width="@dimen/h20"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/h5"
        android:layout_marginRight="@dimen/h5"
        android:layout_weight="0"
        android:gravity="left"
        android:text="03"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/v101_item_view_order_product_money"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/h5"
        android:layout_weight="3"
        android:gravity="left"
        android:text="16.000"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="@dimen/h10"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/h5"
        android:layout_marginRight="@dimen/h5"
        android:layout_weight="0"
        android:gravity="left"
        android:text=":"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/v101_item_view_order_total_money"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/h5"
        android:layout_weight="3"
        android:gravity="left"
        android:text="48.000"
        android:textColor="@color/black" />

</LinearLayout>
